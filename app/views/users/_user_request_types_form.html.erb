<fieldset id="topic_list">
  <legend>For Types</legend>
  <% RequestParams::VALID_TYPES.each do | type | %>
    <label class="checkbox"><input name="admin_request_filter[types][]" value="<%= type %>" type="checkbox" <%= admin_params.type_selected?(type) ? 'checked="true"' : '' %>> <%= type.gsub('Reserve', '') %></label>
  <% end %>
</fieldset>

<fieldset id="topic_list">
  <legend>For Library </legend>
  <% RequestParams::VALID_LIBRARIES.each do | library | %>
    <label class="checkbox"><input name="admin_request_filter[libraries][]" value="<%= library %>" type="checkbox" <%= admin_params.library_selected?(library) ? 'checked="true"' : '' %> > <%= library.titleize %></label>
  <% end %>
</fieldset>
