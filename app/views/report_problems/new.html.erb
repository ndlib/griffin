<% content_for(:content_title) do %>
  <div class="page-header"><h1>Report a Problem</h1></div>
<% end %>
<%
breadcrumb(['Report a Problem'])
%>

<%= form_tag report_problem_path(), method: 'post' do | f | %>
  <fieldset>
    <label for="comments">Describe the issue you are having:</label>
    <textarea id="comments" style="width: 75%;height: 7em;" name="comments" placeholder="Please provide as much detail as you are able."></textarea>
  </fieldset>

  <input type="hidden" name="path" value="<%= params[:path] %>">

  <input type="submit" class="btn btn-primary" value="Submit Report">
<% end %>
