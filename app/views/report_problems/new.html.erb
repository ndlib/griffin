<% content_for(:content_title) do %>
  <div class="page-header"><h1>Contact Us</h1></div>
<% end %>
<%
breadcrumb(['Contact Us'])
%>
<div class="nine columns">
<%= form_tag report_problem_path(), method: 'post' do | f | %>
<%

#Please provide as much detail as you are able."
%>
  <fieldset>
    <label for="comments">Message:</label>

    <textarea id="comments" style="width: 90%;height: 7em;" name="comments" placeholder=""></textarea>
  </fieldset>

  <input type="hidden" name="path" value="<%= params[:path] %>">

  <input type="submit" class="btn btn-primary" value="Send Message">
<% end %>
</div>
<div class="alert alert-info three columns">
  <h4>Contact Information</h4>
  <br/>
  <%= render partial: '/errors/contact_info' %>
  <hr/>
  <%= render partial: '/errors/video_contact_info' %>
</div>
