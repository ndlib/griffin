
<table class="table table-striped">
  <thead>
    <tr>
      <th>Course</th>
      <th>Sections</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% instructed_courses.each do | course | %>
    <tr>
      <td>
        <a href="<%= course_path(course.id) %>"><%= h course.title %></a>
        <ul>
          <%course.crosslisted_course_ids.each do | cid | %>
            <li><%= raw cid %></li>
          <% end %>
        </ul>
      </td>
      <td><%= h course.section_numbers.join(", ") %></td>
      <td><%= link_to 'Request Material', new_course_reserve_path(course.id), class: 'btn btn-primary' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
