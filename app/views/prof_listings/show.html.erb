<script type="text/javascript">
  $(document).ready(function () {

    $('#eresearve_seach').focus(function () {

      if ($(this).attr('data-popover-shown') != 'shown') {
        setTimeout(function () { $(eresearve_seach).popover('show'); }, 2000);
        $(this).attr('data-popover-shown', 'shown');
      }

      return true;
    });

    $('#eresearve_seach').blur(function () {
      $(this).popover('hide');
    });

    $('#eresearve_seach').keyup(function () {
      $(this).popover('hide');
    });

    $('#eresearve_seach').popover({ trigger: 'manual' })

    $('#eresearve_seach').focus();
  });


</script>

