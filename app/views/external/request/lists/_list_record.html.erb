<div class="record <%= object.css_class %>">
  <div class="cover">
    <div class="cover-image thumbnail"></div>
    <div class="cover-type"></div>
  </div>
  <div class="summary">
    <h2 class="title">
      <% if object.link_to_get_listing? %>
        <%= link_to h(object.title), student_listing_get_reserve_path(object.course.id, object.id), target: '_blank' %>
      <% else %>
        <%= h object.title %>
      <% end %>
    </h2>
    <h3 class="author"><%= h object.creator_contributor %></h3>
    <p class="details"><%= h object.details %></p>
    <p class="publisher"><%= h object.publisher_provider %></p>
    <p class="availability">
      <span class="availability-library"><%= h object.available_library %></span>
      <span class="availability-text <%= object.is_available? ? 'available' : '' %>"><%= h object.availability %></span>
      <span class="availability-link"></span>
    </p>
  </div>
</div>
