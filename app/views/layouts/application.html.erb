<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>Admin CSS</title>
    <meta name="description" content="Information resources and collections of the Hesburgh Libraries, University of Notre Dame." />
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />

    <%= stylesheet_link_tag    "hesburgh_assets/admin/1.0/", :media => "all" %>
    <!--[if lte IE 9]>
      <%= stylesheet_link_tag    "hesburgh_assets/admin/1.0/ie.css", :media => "all" %>
    <![endif]-->
    <%= stylesheet_link_tag    "application", :media => "all" %>

    <%= javascript_include_tag "hesburgh_assets/admin/1.0/" %>
    <%= javascript_include_tag "application" %>

    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="frame" id="frame">
      <div class="row header">
        <div class="twelve columns">
          <h2>Libraries<em>Reserves</em></h2>
        </div>
      </div>
      <div class="row menu">
        <div class="twelve columns">
          <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
              <ul class="nav">
                <li><%= link_to "Library Home", "http://www.library.nd.edu" %></li>
                <% if @user_course_listing.has_enrolled_courses? %>
                  <li class="dropdown">
                    <%= link_to raw("Courses <b class=\"caret\"></b>"), "/student_listings", "data-toggle" => "dropdown" %>
                    <ul class="dropdown-menu">
                      <% @user_course_listing.courses_with_reserves.each do | course | %>
                        <li><%= link_to h(course.title), student_listing_path(course.id) %></li>
                      <% end %>
                    </ul>
                  </li>
                <% end %>
                <% if @user_course_listing.has_instructed_courses? %>
                  <li class="dropdown">
                    <%= link_to raw("Instructed Courses <b class=\"caret\"></b>"), "/prof_listings", "data-toggle" => "dropdown" %>
                    <ul class="dropdown-menu">
                      <% @user_course_listing.instructed_courses.each do | course | %>
                        <li><%= link_to h(course.title), prof_listing_path(course.id) %></li>
                      <% end %>
                    </ul>
                  </li>
                <% end %>
              </ul>
              <div class="pull-right">
                <%= current_user.username %>
                <a href="/login">Change User</a>
                <%= content_for(:help) %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row content">
        <div class="frame">
          <div class="row breadcrumb hide-on-phones">
            <%
              if !content_for?(:breadcrumb)
                breadcrumb()
              end
            %>
            <div class="twelve columns">
              <p><%= content_for(:breadcrumb) %></p>
            </div>
          </div>
          <% if content_for?(:left_column) %>
            <div class="three columns">
              <%= content_for(:left_column) %>
            </div>
          <% end %>
          <%
          content_width = 12
          if content_for?(:left_column)
            content_width -= 3
          end
          if content_for?(:right_column)
            content_width -= 4
          end
          if content_for?(:right_column_wide)
            content_width -= 5
          end
          %>
          <div class="<%= number_to_word(content_width) %> columns">
            <div id="pg-title">
              <% if content_for?(:content_title_links) %>
                <div class="pull-right">
                  <%= content_for(:content_title_links) %>
                </div>
              <% end %>
              <%= content_for(:content_title) %>
            </div>
            <%= display_notices %>

            <%= yield %>

          </div>
          <% if content_for?(:right_column) %>
            <div class="four columns">
              <%= content_for(:right_column) %>
            </div>
          <% end %>
          <% if content_for?(:right_column_wide) %>
            <div class="five columns">
              <%= content_for(:right_column_wide) %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </body>
</html>
