
<h3>2. Article Details </h3>

<%= simple_form_for object, :as => :article, :html => {id: "book_form"}, :url => prof_listings_path() do |f| %>

  <%= f.input :journal_title %>
  <%= f.input :title %>
  <%= f.input :creator %>

  <%= f.input :needed_by do %>
    <%= f.input_field :needed_by, as: "string", class: 'datepicker span2' %>
  <% end %>

  <%= f.input :note, label: "Special Instuctions" do %>
    <%= f.input_field :note, as: "text", placeholder: "e.g. Volumne, Issue, Date, Pages and other notes to identify the work. ", rows: 5 %>
  <% end %>


  <%= f.input :requestor_has_an_electronic_copy, as: :boolean, inline_label: "I have an electronic copy.", label: false %>
  <%= f.input :file, as: 'file', label: 'Electronic Copy' %>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', label: "Save" %>
    <%= link_to 'Cancel', prof_listing_path(@course.id), :class => "btn btn-danger" %>
  </div>
<% end %>
