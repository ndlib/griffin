<% object = ::ReserveRow.new(object, current_user) %>

<div class="record <%= object.css_class %>">
  <div class="cover">
    <div class="cover-image thumbnail"></div>
    <div class="cover-type"></div>
  </div>
  <div class="summary">
    <h2 class="title">
      <%= object.title %>
    </h2>
    <h3 class="author"><%= object.creator_contributor %></h3>
    <p class="details"><%= raw object.details %></p>
    <p class="publisher"><%= raw object.publisher_provider %></p>
      <% if object.show_pages? %>
          <p class="length">Reading Length: <%= object.length %></p>
      <% end %>
      <% if object.show_check_availability? %>
        <p class="availability"><a href="/realtime_availability/<%= object.realtime_availability_id %>" class="check_availability_link">Check Availability</a></p>
      <% end %>
    </p>
  </div>
</div>
