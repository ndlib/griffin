
<h3>2. Book Chapter Details </h3>

<%= simple_form_for object, :html => {id: "book_chapter_form"}, :url => course_reserves_path() do |f| %>

  <%= f.input :title %>
  <%= f.input :creator, :required => true %>

  <%= f.input :needed_by, hint: "Please plan on a 2 week lead time." do %>
    <%= f.input_field :needed_by, as: "string", class: 'datepicker span2' %>
  <% end %>

  <%= f.input :length, label: "Chapter / Pages", :required => true do %>
    <%= f.input_field :length, class: 'span2'%>
  <% end %>

  <%= library_select_form(f) %>

  <%= f.input :note, label: "Special Instuctions" do %>
    <%= f.input_field :note, as: "text", placeholder: "e.g. Specific edition or other notes to identify the work. ", rows: 5 %>
  <% end %>

  <%= f.input :requestor_owns_a_copy, as: :boolean, inline_label: "I own a copy of the book.", label: false %>

  <%= f.input :requestor_has_an_electronic_copy, label: false do %>
    <%= f.input_field :requestor_has_an_electronic_copy, as: :boolean, inline_label: "I have an electronic copy.", label: false, class: 'has_electronic_copy_checkbox' %>
    <div class="has_electronic_copy">
      <%= f.input_field :file, as: 'file', label: 'Electronic Copy' %>
    </div>
  <% end %>

  <%= hidden_field_tag 'instructor_reserve_request[type]', 'BookChapterReserve' %>

  <div class="form-actions">
    <%= f.button :submit, "Save", :class => 'btn-primary'%>
    <%= link_to 'Cancel', course_path(@course.id), :class => "btn btn-danger" %>
  </div>

<% end %>
