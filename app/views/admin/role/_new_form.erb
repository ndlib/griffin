<%= simple_form_for @role, 
    :url => url_for(:action => 'create', :controller => 'admin/role'),
    :html => {:class => 'form-horizontal' } do |v| %>
  <%= v.error_notification %>
  <%= v.input :name, :input_html => { :id => "role_name", :class => "span6" }%>
  <%= v.input :description, :input_html => { :id => "role_description", :class => "span6" } %>
  <div class="form-actions">
    <%= v.button :submit, :class => 'btn-primary'%>
  </div>
<% end %>
