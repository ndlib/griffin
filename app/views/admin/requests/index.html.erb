<% content_for(:content_title) do %>
  <h1>Requests</h1>
<% end %>

<% content_for(:content_title_links) do %>
  <a href="#filter_form" data-toggle="modal">Filter Request Results</a>
<% end %>


<div class="tabbable tabs-top">
  <ul class="nav nav-tabs">
    <li class="<%= params[:filter].nil? || params[:filter] == 'new' ? 'active' : '' %>">
      <% if !params[:filter] || params[:filter] == 'awaiting' %>
        <a class="tab" data-toggle="tab" filter="new" href="#1">New</a>
      <% else %>
        <a class="tab" filter="new" href="<%= requests_path() %>">New</a>
      <% end %>
    </li>
    <li class="<%= params[:filter] == 'awaiting' ? 'active' : '' %>">
      <% if !params[:filter] || params[:filter] == 'awaiting' %>
        <a class="tab" data-toggle="tab" filter="awaiting" href="#2">Awaiting Action</a>
      <% else %>
        <a class="tab" filter="awaiting" href="<%= requests_path(:filter => 'awaiting') %>">Awaiting Action</a>
      <% end %>
    </li>
    <li class="<%= params[:filter] == 'complete' ? 'active' : '' %>">
      <a class="tab" filter="complete" data-toggle="link_tab" href="<%= requests_path(:filter => 'complete') %>">Completed</a>
    </li>
    <li class="<%= params[:filter] == 'all' ? 'active' : '' %>">
      <a class="tab" data-toggle="link_tab" filter="all" href="<%= requests_path(:filter => 'all') %>">All</a>
    </li>
  </ul>
</div>

<form class="table_filter">
  <select>
    <option>Current Sememster</option>
    <option>Future Semesters</option>
  </select>
</form>

