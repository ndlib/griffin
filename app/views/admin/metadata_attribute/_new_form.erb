<%= simple_form_for @metadata_attribute, 
    :url => url_for(:action => 'create_metadata_attribute', :controller => 'admin'),
    :html => {:class => 'form-horizontal' } do |s| %>
  <%= s.error_notification %>
  <%= s.input :name, :input_html => { :id => "ma_name", :class => "span6" }%>
  <%= s.input :metadata_type, :collection => [['Basic', 'basic'], ['Technical', 'technical']] %>
  <%= s.input :definition, :label => "Definition", :input_html => { :id => "ma_definition", :class => "span6" } %>
  <div class="form-actions">
    <%= s.button :submit, :class => 'btn-primary', :value => 'Create'%>
  </div>
<% end %>
