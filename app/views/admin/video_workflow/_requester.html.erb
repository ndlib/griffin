<div class="modal" id="requesterModal" tabindex="-1" role="dialog" aria-labelledby="requesterModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="requesterModalLabel">Requester Information</h3>
  </div>
  <div class="modal-body">
    <table cellpadding="4">
      <% if @requester.respond_to?(:displayname) %>
        <tr>
          <td align="right"><span style="font-weight: bold;">Name</span></td>
          <td><span><%= @requester.displayname.first %> (<%= @requester.uid.first %>)</span></td>
        </tr>
      <% end %>
      <% if @requester.respond_to?(:title) %>
        <tr>
          <td align="right"><span style="font-weight: bold;">Title</span></td>
          <td><span><%= @requester.title.first %> (<%= @requester.edupersonaffiliation.first %>)</span></td>
        </tr>
      <% end %>
      <% if @requester.respond_to?(:nddepartment) %>
        <tr>
          <td align="right"><span style="font-weight: bold;">Department</span></td>
          <td><span><%= @requester.nddepartment.first %></span></td>
        </tr>
      <% end %>
      <% if @requester.respond_to?(:ndmail) %>
        <tr>
          <td align="right"><span style="font-weight: bold;">Email</span></td>
          <td><span><a href="mailto:<%= @requester.ndmail.first %>" style="text-decoration: underline; outline-style: none;"><%= @requester.ndmail.first %></a></span></td>
        </tr>
      <% end %>
      <% if @requester.respond_to?(:telephonenumber) %>
        <tr>
          <td align="right"><span style="font-weight: bold;">Phone Number</span></td>
          <td><span><%= @requester.telephonenumber.first %></span></td>
        </tr>
      <% end %>
      <% if @requester.respond_to?(:ndofficeaddress) %>
        <tr>
          <td align="right"><span style="font-weight: bold;">Address</span></td>
          <td>
            <% for @part in @requester.ndofficeaddress.first.split(/\$/) %>
              <span><%= @part %></span><br/>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
