<div class="modal" id="requesterModal" tabindex="-1" role="dialog" aria-labelledby="requesterModalLabel" aria-hidden="true">
  <style type="text/css">
    .label-info {font-size: 12px;}
  </style>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="requesterModalLabel">Requester Information</h3>
  </div>
  <div class="modal-body">
    <table cellpadding="4">
      <tr>
        <td align="right"><span class="label">Name</span></td>
        <td><span><%= @requester.displayname.first %> (<%= @requester.uid %>)</span></td>
      </tr>
      <tr>
        <td align="right"><span class="label">Title</span></td>
        <td><span><%= @requester.title.first %> (<%= @requester.edupersonaffiliation %>)</span></td>
      </tr>
      <tr>
        <td align="right"><span class="label">Department</span></td>
        <td><span><%= @requester.nddepartment.first %></span></td>
      </tr>
      <tr>
        <td align="right"><span class="label">Email</span></td>
        <td><span><a href="mailto:<%= @requester.ndmail.first %>" style="text-decoration: underline; outline-style: none;"><%= @requester.ndmail.first %></a></span></td>
      </tr>
      <tr>
        <td align="right"><span class="label">Phone Number</span></td>
        <td><span><%= @requester.telephonenumber.first %></span></td>
      </tr>
      <tr>
        <td align="right"><span class="label">Address</span></td>
        <td>
          <% for @part in @requester.ndofficeaddress.first.split(/\$/) %>
            <span><%= @part %></span><br/>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
