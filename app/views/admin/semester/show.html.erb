<div class="container">
  <div class="row">
    <div class="span9">
      <h3>Semester</h3>
      <div class="span9">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>
                <strong>Code</strong>
              </td>
              <td>
                <%= @semester.code %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>Full Name</strong>
              </td>
              <td>
                <%= @semester.full_name %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>Begin Date</strong>
              </td>
              <td>
                <%= @semester.date_begin.strftime("%A %B %d, %Y")%>
              </td>
            </tr>
            <tr>
              <td>
                <strong>End Date</strong>
              </td>
              <td>
                <%= @semester.date_end.strftime("%A %B %d, %Y")%>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
