<script type="text/javascript" charset="utf-8">
  
  $(document).ready(function() { 
    $('.user_load').click(function() {
      busyLoaderModal();
    });
  });
</script>
<div class="container">
  <div class="row">
    <h1 style="display:inline; margin-right: 40px;">User <%= @user.display_name %></h1><a class="btn btn-primary" href="<%= url_for(edit_admin_user_path(@user)) %>">Edit User</a>
    <hr/>
    <div class="span9 tabbable tabs-top">
      <ul class="nav nav-tabs">
        <li class="active">
          <a data-toggle="tab" style="outline-style: none;" href="#lA">Basic Info</a>
        </li>
        <li class="">
          <a data-toggle="tab" style="outline-style: none;" href="#lB">Authorization</a>
        </li>
      </ul>
      <div class="tab-content">
        <div id="lA" class="tab-pane active">
          <div class="span6">
            <table class="table table-bordered" style="width:80%;">
              <tbody>
                <tr>
                  <td>
                    <strong>Name</strong>
                  </td>
                  <td>
                    <%= link_to(user_info_path(@user), :class => 'user_load', :method => :post, :remote => true) do %>
                      <i class="icon-user"></i>
                    <% end %>
                    <%= @user.display_name %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <strong>Email</strong>
                  </td>
                  <td>
                    <%= @user.email %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <strong>Username</strong>
                  </td>
                  <td>
                    <%= @user.username %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <strong>Login Count</strong>
                  </td>
                  <td>
                    <%= @user.sign_in_count %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <strong>Last Login</strong>
                  </td>
                  <td>
                    <% if @user.current_sign_in_at? %>
                      <%# @user.current_sign_in_at.strftime("%A %B %d, %Y %I:%M:%S%p")  %>
                      <%= @user.current_sign_in_at  %>
                    <% end %>
                  </td>
                </tr>
              </tbody>
          </table>
          </div>
        </div>
        <div id="lB" class="tab-pane">
          <table class="table table-bordered">
            <thead>
              <tr>
                <td><strong>Name</strong></td>
                <td><strong>Description</strong></td>
              </tr>
            </thead>
            <tbody>
              <% @user.roles.each do |role| %>
              <tr>
                <td>
                  <%= role.name %>  
                </td>
                <td>
                  <%= role.description %>  
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
