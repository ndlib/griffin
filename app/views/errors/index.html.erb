<% content_for(:content_title) do %>
  <h1>Recent Errors</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Netid</th>
      <th>Message</th>
      <th>Path</th>
      <th>Params</th>
    </tr>
  </thead>
  <tbody>
    <% @errors.each do | error | %>
      <tr>
        <td><%= link_to error.created_at, error_path(error) %></td>
        <td><%= error.netid %></td>
        <td><%= error.message %></td>
        <td><%= error.path %></td>
        <td><%= error.params %></td>
      </tr>
    <% end %>
  </tbody>
</table>
