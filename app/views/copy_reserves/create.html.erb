
<div class="hero-unit">

  <h1>Items Copied Successfully</h1>

  <p>
    <dl class="dl-horizontal">
      <dt>Copied:</dt>
      <dd>
        <ul>
          <% @copy_course_listing.copied_items.each do | item | %>
            <li><%= item.title %></li>
          <% end %>
        </ul>
      </dd>
      <dt>From:</dt><dd> <%= link_to h(@copy_course_listing.from_course_title), course_path(@copy_course_listing.to_course.id)  %></dd>
      <dt>To:</dt><dd><%= link_to h(@copy_course_listing.to_course_title), course_path(@copy_course_listing.from_course.id) %></dd>
    </dl>
  </p>
  <p>
    <%= link_to "Continue to #{@copy_course_listing.to_course_title}", course_path(@copy_course_listing.from_course.id), class: 'btn btn-large' %>
  </p>
</div>
